{
  "name": "@nily/env",
  "description": "Webpack env plugin",
  "version": "0.1.0",
  "homepage": "https://github.com/NilyCat/env",
  "repository": {
    "type": "git",
    "url": "git@github.com:NilyCat/env.git"
  },
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig-build.json",
    "build:cjs": "tsc -p tsconfig-build-cjs.json",
    "test": "jest",
    "cov": "jest --coverage",
    "prebuild": "rimraf lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format"
    ]
  },
  "peerDependencies": {
    "@types/node": "^15.6.0",
    "dotenv-defaults": "^2.0.1",
    "tslib": "^2.2.0"
  },
  "dependencies": {
    "@types/node": "^15.6.0",
    "dotenv-defaults": "^2.0.1",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@types/dotenv-defaults": "^2.0.0",
    "@types/jest": "^26.0.20",
    "coveralls": "^3.0.9",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test/.+\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
